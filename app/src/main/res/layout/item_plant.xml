<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="12dp"
    android:foreground="@drawable/card_ripple"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/card_bg">

        <!-- Top Row: Plant Image + Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Rounded image using drawable mask + clipToOutline -->
            <ImageView
                android:id="@+id/imagePlant"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginEnd="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plant"
                android:contentDescription="plant image"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:transitionName="plantImage" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPlantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/textPlantNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes / species"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textLastWatered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last watered: never"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/verdure_green_light"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonWatered"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Watered"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:backgroundTint="@color/verdure_green_light"
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:backgroundTint="@color/verdure_green"
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:backgroundTint="@color/accent"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
