<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/verdure_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageFull"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_plant"
            android:background="@color/card_bg"
            android:transitionName="plantImageFull" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plant name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_primary"/>

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes / species"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvLastWatered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last watered: never"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/verdure_green_light"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvPrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediction: —"
            android:textStyle="bold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvDisease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disease: —"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnDetailWatered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Watered"
                android:backgroundTint="@color/verdure_green_light"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnDetailEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="12dp"/>

            <Button
                android:id="@+id/btnDetailDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="12dp"
                android:backgroundTint="@color/accent"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
