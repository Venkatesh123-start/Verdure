<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/verdure_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header icon (click to choose/take/remove image) -->
        <ImageView
            android:id="@+id/imagePlant"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plant"
            android:contentDescription="Plant image"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- small helper text under image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap image to choose or take photo"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Plant name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPlantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plant name"
            app:hintEnabled="true"
            android:layout_marginTop="18dp">

            <!-- NOTE: NO android:hint on this EditText (avoid duplicate text/hint overlap) -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes / species -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPlantNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes / species (optional)"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPlantNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Watering interval label and input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watering interval (days)"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interval in days (e.g., 3)"
            android:layout_marginTop="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIntervalDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Reminder time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminder time (24h HH:mm) â€” optional"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder time (e.g., 14:30)"
            android:layout_marginTop="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editReminderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last watered display -->
        <TextView
            android:id="@+id/textLastWateredDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last watered: never"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="14dp" />

        <!-- Spacer to push save button down -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Save button -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SAVE"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/verdure_green"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
