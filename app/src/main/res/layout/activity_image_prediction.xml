<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdure_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¿ Image Prediction"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/verdure_green_dark"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Image preview card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plant"
                android:contentDescription="Preview image" />
        </androidx.cardview.widget.CardView>

        <!-- Buttons for image selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Choose"
                android:backgroundTint="@color/verdure_green"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“· Capture"
                android:layout_marginStart="12dp"
                android:backgroundTint="@color/verdure_green_light"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Predict button -->
        <Button
            android:id="@+id/btnPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Run Prediction"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/verdure_green_dark"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- STATUS -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick or take a plant image to begin."
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_secondary" />

        <!-- RESULT CARDS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDisease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No analysis yet."
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top matches in your collection:"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:id="@+id/llMatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SAVE AS PLANT -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¾ Save as New Plant"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/edtNewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plant name"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/edtNewNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes / species (optional)"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/edtNewInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Watering interval (days)"
                    android:inputType="number"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_bg" />

                <Button
                    android:id="@+id/btnSaveAsPlant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¾ Save Plant"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/verdure_green_dark"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
